<Window x:Class="EnturSystray.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:EnturSystray.Resources"
        Title="{x:Static res:Strings.SettingsWindow_Title}"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Add button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="{x:Static res:Strings.Label_TrayIcons}" FontWeight="Bold" FontSize="14"/>
            <Button Grid.Column="1" x:Name="AddButton" Width="80" Click="AddButton_Click"/>
        </Grid>

        <!-- Icons List -->
        <ListBox Grid.Row="1" x:Name="IconsListBox" Margin="0,0,0,10"
                 SelectionChanged="IconsListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Border Width="20" Height="20" CornerRadius="3" Margin="0,0,10,0"
                                Background="{Binding ColorBrush}">
                            <TextBlock Text="5" Foreground="{Binding TextColorBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontWeight="Bold" FontSize="11"/>
                        </Border>
                        <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- List Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="EditButton" Width="70" Margin="0,0,5,0" Click="EditButton_Click" IsEnabled="False"/>
            <Button x:Name="RemoveButton" Width="70" Margin="0,0,5,0" Click="RemoveButton_Click" IsEnabled="False"/>
            <Button x:Name="MoveUpButton" Width="75" Margin="0,0,5,0" Click="MoveUpButton_Click" IsEnabled="False"/>
            <Button x:Name="MoveDownButton" Width="80" Click="MoveDownButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Separator -->
        <Separator Grid.Row="3" Margin="0,0,0,15"/>

        <!-- Global Settings -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="{x:Static res:Strings.Label_RefreshInterval}" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="RefreshIntervalTextBox" Width="60" Text="30" Margin="5,0,5,0"/>
            <Label Grid.Column="2" Content="{x:Static res:Strings.Label_SecondsMin10}" VerticalAlignment="Center"/>
        </Grid>

        <!-- Language Setting -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="{x:Static res:Strings.Label_Language}" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" x:Name="LanguageComboBox" Width="150" Margin="5,0,0,0"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button x:Name="CancelButton" Content="{x:Static res:Strings.Button_Cancel}" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="{x:Static res:Strings.Button_Save}" Width="80" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
